a
  color $primary
  transition $animation
  &:hover
  &:focus
    text-decoration none
    color $primaryh
img
  max-width 100%
  height auto

.table-bordered
  border-width: 1px
  border-color $gray

.list-reset
  padding 0
  margin 0
  list-style none

.animated
  transition: all .25s ease

.border_bottom_white
  border-color #fff

.row-list-reset
  padding 0
  list-style: none

.width-fit-content
  width fit-content

.section__title
  margin-bottom 48px
  font-size 24px
  text-transform uppercase
  font-weight 700

.mt-100
  margin-top -100px

.vasd
  height 100vh

.section-padding
  padding-top 48px
  padding-bottom 48px

.i_icon-more
  transform rotate(-90deg)

.del-pseudo
  &:before
  &:after
    display none !important

.bw-hover //bw - black-white
  &:hover
    filter grayscale(1)

.custom-control-label
  padding-left 20px

.custom-checkbox .custom-control-label::before
  border-color $primary

.custom-control-label::before
.custom-control-label::after
  top auto
  width 2rem
  height 2rem

.custom-control-input:checked~.custom-control-label::before
  border-color $primary
  background-color $primary

@media (max-width 1199.98px)
  body
    padding-top 60px
@media (max-width 991.98px)
  body
    padding-top 63px
  .section-padding
    padding-top 38px
    padding-bottom 38px
@media (max-width 767.98px)
  body
    font-size 14px
    padding-top 58px
  .section-padding
    padding-top 28px
    padding-bottom 28px
  .stash-md
    position relative
    margin-bottom 0
    height 30px
    overflow hidden
    z-index 1
    &::after
      content ''
      position absolute
      bottom 0
      left 0
      width 100%
      height 100%
      z-index 2
      background-image -webkit-gradient(linear, left bottom, left top, color-stop(30%, rgba(255, 255, 255, 0.9)), to(rgba(255, 255, 255, 0.2)))
      background-image -o-linear-gradient(bottom, rgba(255, 255, 255, 0.9) 30%, rgba(255, 255, 255, 0.2))
      background-image linear-gradient(to top, rgba(255, 255, 255, 0.9) 30%, rgba(255, 255, 255, 0.2))
  .section__title
    margin-bottom 24px
    font-size 18px
  .custom-control-label
    font-size 12px
  .custom-control-label::before
  .custom-control-label::after
    width 1.25rem
    height 1.25rem
